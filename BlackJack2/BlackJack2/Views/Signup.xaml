<Page
    x:Class="BlackJack2.Views.Signup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BlackJack2.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <CheckBox x:Name="checkBox" Content="Valider les conditions d'utilisations" HorizontalAlignment="Left" Margin="352,495,0,0" VerticalAlignment="Top" Width="362" FontSize="22"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="434,91,0,0" TextWrapping="Wrap" Text="S'inscrire" VerticalAlignment="Top" Height="54" Width="338" SelectionChanged="textBlock_SelectionChanged" FontSize="36"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Margin="352,211,0,0" TextWrapping="Wrap" PlaceholderText="Votre adresse email" VerticalAlignment="Top" Width="362"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Left" Margin="352,285,0,0" TextWrapping="Wrap" PlaceholderText="Pseudo" VerticalAlignment="Top" Width="362"/>
        <TextBox x:Name="textBox2" HorizontalAlignment="Left" Margin="352,353,0,0" TextWrapping="Wrap" PlaceholderText="Nom" VerticalAlignment="Top" RenderTransformOrigin="1.746,0.422" Width="362"/>
        <TextBox x:Name="textBox3" HorizontalAlignment="Left" Margin="352,425,0,0" TextWrapping="Wrap" PlaceholderText="Password" VerticalAlignment="Top" Width="362"/>
        <Button x:Name="button" Content="S'enregistrer" HorizontalAlignment="Left" Margin="352,562,0,0" VerticalAlignment="Top" Height="32" Width="362"/>
        <Button x:Name="ReturnButton" Content="Retour" HorizontalAlignment="Left" Margin="34,27,0,0" VerticalAlignment="Top" Height="70" Width="70" Click="returnClick"/>

    </Grid>
</Page>
